<Window x:Class="GitLab.NET.Client.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="MainWindow" Height="350" Width="525">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="86*"/>
            <ColumnDefinition Width="261*"/>
            <ColumnDefinition Width="170*"/>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="81*"/>
            <RowDefinition Height="239*"/>
        </Grid.RowDefinitions>
        <TextBox x:Name="txtToken" HorizontalAlignment="Left" Height="23" Margin="35,38,0,0" TextWrapping="Wrap" Text="" VerticalAlignment="Top" Width="163" Grid.Column="1"/>
        <TextBlock HorizontalAlignment="Left" Margin="10,41,0,0" TextWrapping="Wrap" Text="Token" VerticalAlignment="Top"/>
        <Button Content="Fetch" Grid.Column="2" HorizontalAlignment="Left" Margin="43,41,0,0" VerticalAlignment="Top" Width="75" Click="ButtonClick1"/>
        <TextBox x:Name="txtResponse" IsReadOnly="True" Grid.ColumnSpan="3" HorizontalAlignment="Stretch" Margin="10" Grid.Row="1" TextWrapping="Wrap" Text="TextBox" VerticalAlignment="Stretch" />

    </Grid>
</Window>
